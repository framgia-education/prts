<% provide :title, "Office's Information" %>

<div class="col-md-6 col-md-offset-3">
  <div>
    <%= link_to admin_offices_path, class: "btn btn-info btn-xs", title: "Go back" do %>
      <span class="glyphicon glyphicon-arrow-left"></span> All offices
    <% end %>

    <% if current_user.admin? %>
      <%= link_to edit_admin_office_path(@office),
        class: "btn btn-warning btn-xs pull-right", title: "Edit" do %>
        <span class="glyphicon glyphicon-edit"></span>
      <% end %>
    <% end %>
  </div>

  <h2 class="text-center">Office's Information</h2>

  <table class="table table-striped table-hover">
    <tbody>
      <tr>
        <td>Name</td>
        <td><%= @office.name %></td>
      </tr>
      <tr>
        <td>Address</td>
        <td><%= @office.address %></td>
      </tr>
      <tr>
        <td>Description</td>
        <td><%= @office.description.present? ? @office.description : "N/A" %></td>
      </tr>
      <tr>
        <td>Number of users</td>
        <td><%= @office.users.size %></td>
      </tr>
      <tr>
        <td>Number of pull requests</td>
        <td><%= total_pull_requests @office %></td>
      </tr>
    </tbody>
  </table>
</div>
