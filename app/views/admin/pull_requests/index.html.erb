<% provide :title, "Manage Pull Requests" %>

<div class="items-overview">
  <div class="col-md-8">
    <h2 class="text-center">Manage Pull Requests</h2>
    <div class="stats">
      <div class="col-md-2">
        <div class="row">
          <span class="amount">
            Total: <%= number_with_delimiter @support.total_pull_requests, delimiter: "." %>
          </span>
        </div>
      </div>

      <div class="col-md-5 detail-stats">
        <div class="row">
          <span class="ready">ready: <%= @support.ready_pulls_size %></span>
          <span class="reviewing">reviewing: <%= @support.reviewing_pulls_size %></span>
          <span class="commented">commented: <%= @support.commented_pulls_size %></span>
          <br><br>
          <span class="conflicted">conflicted: <%= @support.conflicted_pulls_size %></span>
          <span class="closed">closed: <%= @support.closed_pulls_size %></span>
          <span class="merged">merged: <%= number_with_delimiter @support.merged_pulls_size, delimiter: "." %></span>
        </div>
      </div>

      <div class="col-md-3 col-md-offset-1">
        <%= form_tag admin_pull_requests_path, method: :get do %>
          <%= label_tag :office_id, "Office" %>
          <%= select_tag :office_id, options_for_select(@offices.collect{|office| [office.name, office.id]}, params[:office_id]),
            include_blank: "All", class: "form-control office-classification" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="row">
      <h4>The most active memebers <%= image_tag "buoyant.gif" %></h4>
      <div class="active-members">
        <% @support_user.active_members.each do |user| %>
          <p>
            <%= image_tag "flower.gif" %>
            <span class="username"><%= user.name %></span>
            <% if user.office_name %>
              - <%= user.office_name %>
            <% end %>
            <span class="merged"><%= user.merged_pulls_size %></span>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th class="index">#</th>
      <th>Url</th>
      <th>Created By</th>
      <th class="datetime">Created At</th>
      <th class="datetime">Updated Time</th>
      <th>Current Reviewer</th>
      <th class="status">Status</th>
    </tr>
  </thead>
  <tbody>
    <% @pull_requests.each_with_index do |pull_request, index| %>
      <tr>
        <td>
          <%= index_for params[:page] || 1, index, Settings.pull_request.per_page %>
        </td>
        <td>
          <%= link_to truncate(pull_request.url_files, length: Settings.admin.pull_request.truncate_url),
            pull_request.url_files, target: "_blank", title: pull_request.url %>
        </td>
        <td><%= pull_request.user_name %></td>
        <td><%= l pull_request.created_at, format: :long %></td>
        <td><%= time_ago_in_words pull_request.updated_at %> ago</td>
        <% if pull_request.current_reviewer %>
          <td><%= pull_request.current_reviewer %></td>
        <% else %>
          <td class="text-center current-reviewer">-</td>
        <% end %>
        <td class="pull-status pull-request-<%= pull_request.id %>">
          <% if pull_request.ready? %>
            <%= form_for [:admin, pull_request] do |f| %>
              <%= f.hidden_field :status, value: :reviewing %>
              <span role="button" class="ready">
                <%= pull_request.status %>
              </span>
            <% end %>
          <% else %>
            <span class="<%= pull_request.status %>"><%= pull_request.status %></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= paginate @pull_requests, theme: "twitter-bootstrap-4", pagination_class: "pagination-sm" %>
</div>
