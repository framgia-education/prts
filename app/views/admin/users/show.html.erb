<% provide :title, "User's Information" %>

<div class="col-md-6 col-md-offset-3">
  <div>
    <%= link_to admin_users_path, class: "btn btn-info btn-xs", title: "Go back" do %>
      <span class="glyphicon glyphicon-arrow-left"></span> All users
    <% end %>

    <%= link_to edit_admin_user_path(@user), class: "btn btn-warning btn-xs pull-right", title: "Edit" do %>
      <span class="glyphicon glyphicon-edit"></span>
    <% end %>
  </div>

  <h2 class="text-center">User's Information</h2>

  <table class="table table-striped table-hover">
    <tbody>
      <tr>
        <td>Name</td>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <td>Email</td>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <td>Account type</td>
        <td>
          <span class="<%= @user.role %>"><%= @user.role %></span>
        </td>
      </tr>
      <tr>
        <td>Number of pull requests</td>
        <td><%= @user.pull_requests.size %></td>
      </tr>
      <tr>
        <td>Office</td>
        <td><%= @user.office_name.present? ? @user.office_name : "N/A" %></td>
      </tr>
    </tbody>
  </table>
</div>
